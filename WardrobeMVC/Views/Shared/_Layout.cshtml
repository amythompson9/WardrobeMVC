<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hipster Closet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" @Html.ActionLink("Hipster Closet", "Index", "Home")</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Tops
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add a Top", "Create", "Tops")</li>
                        <li>@Html.ActionLink("See All Tops", "Index", "Tops")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Bottoms
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add a Bottom", "Create", "Bottoms")</li>
                        <li>@Html.ActionLink("See All Bottoms", "Index", "Bottoms")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Accessories
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add an Accessory", "Create", "Accessories")</li>
                        <li>@Html.ActionLink("See All Accessories", "Index", "Accessories")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Shoes
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add a Shoe", "Create", "Feetwears")</li>
                        <li>@Html.ActionLink("See All Shoes", "Index", "Feetwears")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hipster Closet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
